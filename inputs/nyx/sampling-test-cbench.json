{
	"project-home": "/projects/groups/vizproject/dssdata/foresight-data/sampling/",
	"wflow-path": "cbench-zfp",
	"foresight-home": "/projects/exasky/pascal-projects/VizAly-Foresight/",

	"input": {
		"filetype": "NYX",
		"filename": "/projects/exasky/ayan_space/NVB_C009_l10n512_S12345T692_z42.hdf5",

		"group": "native_fields",
		"scalars": 
		[
			"baryon_density",
			"dark_matter_density",
			"temperature",
			"velocity_x",
			"velocity_y",
			"velocity_z"
		],

		"uncompressed": 
		[
			{
				"group": "domain",
				"attributes": 
				[
					{
						"name": "shape",
						"type": "int",
						"size": 3
					},
					{
						"name": "size",
						"type": "double",
						"size": 3
					}
				]
			},


			{
				"group": "universe",
				"attributes": 
				[
					{
						"name": "hubble",
						"type": "double",
						"size": 1
					},
					{
						"name": "omega_b",
						"type": "double",
						"size": 1
					},
					{
						"name": "omega_l",
						"type": "double",
						"size": 1
					},
					{
						"name": "omega_m",
						"type": "double",
						"size": 1
					},
					{
						"name": "redshift",
						"type": "double",
						"size": 1
					}
				]
			}
		]
	},

	"compressor-comment": "which compressors to test",
	"compressors": 
	[
		{
			"name": "Sampled",
			"output-prefix": "sampled"
		},

		{
			"name": "BLOSC",
			"output-prefix": "BLOSC_"
		},

		{
			"name": "fpzip",
			"bits" : 24,
			"output-prefix" : "fpzip_24_"
		},

		{
			"name": "fpzip",
			"bits" : 16,
			"output-prefix" : "fpzip_16_"
		},

		{
			"name": "fpzip",
			"bits" : 8,
			"output-prefix" : "fpzip_8_"
		},

		{
			"name": "fpzip",
			"bits" : 4,
			"output-prefix" : "fpzip_4_"
		},

		{
			"name": "fpzip",
			"bits" : 2,
			"output-prefix" : "fpzip_2_"
		}
	],

	"cbench": 
	{
		"path": "mpirun $foresight-home$build/CBench",

		"output": {
			"output-decompressed": true,
			"output-decompressed-location": "decompressed_files",

			"logfname-comment": "name of output log file",
			"log-file": "runlog_",

			"metricsfname-comment": "name of file with output",
			"metrics-file": "metrics_"
		},

		"metrics": [{
				"name": "absolute_error"
			},

			{
				"name": "relative_error"
			},

			{
				"name": "mse"
			},

			{
				"name": "psnr"
			}
		],

		"evn_path": "scripts/VizAly-CBench.bash.darwin",

		"configuration": {
			"partition": "galton",
			"nodes": 1,
			"ntasks-per-node": 16
		}
	},

	"pat": 
	{
		"evn_path": "scripts/VizAly-CBench.bash.darwin",

		"analysis-tool": {
			"gimlet-home": "/projects/exasky/gimlet2",

			"analytics": 
			[
				{
					"name": "sim_stats",
					"type": ["rhob", "rhom", "rhodm", "temp", "velmag", "vz"],
					"postfix": "_ps3d.txt",
					"path": "mpirun /projects/exasky/gimlet2/apps/sim_stats/sim_stats.ex",
					"configuration": {
						"partition": "galton",
						"nodes": 8,
						"ntasks-per-node": 8
					}
				},

				{
					"name": "lya_all_axes",
					"type": ["x", "y", "z"],
					"postfix": "_flux_ps1d.txt",
					"path": "mpirun /projects/exasky/gimlet2/apps/lya_all_axes/lya_all_axes.ex",
					"command": "cp /projects/exasky/gimlet2/treecools/TREECOOL_middle .",
					"configuration": {
						"partition": "galton",
						"nodes": 8,
						"ntasks-per-node": 8
					}
				}
			]
		},

		"input-files": [],

		"analysis": []
	},


	"cinema-plots": 
	{
		"cinema-db-name": "cinemaDB",
		"plotting": {
			"x-range": [0, 11]
		},

		"evn_path": "scripts/VizAly-CBench.bash.darwin",
		"configuration": {
			"partition": "galton",
			"nodes": 1,
			"ntasks-per-node": 8
		}
	}
}